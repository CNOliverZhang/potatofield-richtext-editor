{
  "appId": "cn.potatofield.appname",
  "productName": "洋芋田",
  "copyright": "Copyright © 2022 ${author}",
  "asar": true,
  "directories": {
    "output": "release/${version}",
    "buildResources": "resources"
  },
  "files": ["dist"],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "potatofield-appname-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "mac": {
    "target": ["dmg"],
    "artifactName": "potatofield-appname-${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage"],
    "artifactName": "potatofield-appname-${version}.${ext}"
  },
  "releaseInfo": {
    "releaseNotes": "更新日志"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "https://files.potatofield.cn/"
    }
  ]
}
